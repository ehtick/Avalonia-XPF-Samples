<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="OpenGLSample.OpenGlPage"
             xmlns:local="using:OpenGLSample"
             xmlns:openGl="clr-namespace:OpenGLSample.OpenGL">
  <Grid x:Name="MainGrid">
    <local:OpenGlPageControl x:Name="GL"/>
    <openGl:GlPageKnobs x:Name="Knobs" />
    <Button x:Name="Snapshot"
            IsVisible="False"
            VerticalAlignment="Bottom" HorizontalAlignment="Right"  Click="SnapshotClick">Snapshot</Button>
  </Grid>
</UserControl>
